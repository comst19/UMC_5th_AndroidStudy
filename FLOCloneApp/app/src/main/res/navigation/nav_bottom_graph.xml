<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_bottom_graph"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.comst.flocloneapp.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_albumFragment"
            app:destination="@id/albumFragment"/>
    </fragment>
    <fragment
        android:id="@+id/lookFragment"
        android:name="com.comst.flocloneapp.LookFragment"
        android:label="fragment_look"
        tools:layout="@layout/fragment_look" />
    <fragment
        android:id="@+id/lockerFragment"
        android:name="com.comst.flocloneapp.LockerFragment"
        android:label="fragment_locker"
        tools:layout="@layout/fragment_locker" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.comst.flocloneapp.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.comst.flocloneapp.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.comst.flocloneapp.AlbumFragment"
        android:label="fragment_album"
        tools:layout="@layout/fragment_album">

        <!-- First argument -->
        <argument
            android:name="albumName"
            android:defaultValue=""
            app:argType="string" />

        <!-- Second argument -->
        <argument
            android:name="artistName"
            android:defaultValue=""
            app:argType="string" />

    </fragment>



</navigation>