<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FLOCloneApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Remove the title bar -->
        <!-- <item name="windowNoTitle">true</item> -->

        <!-- Status bar color. -->
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="Base.Theme.SplashActivity" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_flo_logo_4</item>
        <item name="postSplashScreenTheme">@style/Theme.FLOCloneApp</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.FLOCloneApp" parent="Base.Theme.FLOCloneApp" />
    <style name="Theme.SplashActivity" parent="Base.Theme.SplashActivity"/>
</resources>